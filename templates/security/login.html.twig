<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Login</title>
		{{ importmap('app') }}
	</head>
	<body class="vh-100 d-flex align-items-center justify-content-center">
		<form method="post" class="d-flex justify-content-center flex-fill">
			<div class="login-wrapper p-4 rounded-4 d-flex flex-column gap-3 shadow" style="backdrop-filter: blur(5px)">
				<h3 class="text-center">Login</h3>
				{% if error %}
					<div class="alert alert-danger fw-bold my-0">{{ error.messageKey }}</div>
				{% endif %}
				<div>
					<div class="form-floating mb-3">
						<input type="email" value="{{ last_username }}" placeholder="name@example.com" name="_username" id="username" class="form-control border-secondary" autocomplete="email" autofocus>
						<label for="username">Email
							<span class="text-danger">*</span>
						</label>
					</div>
					<div class="form-floating">
						<input type="password" name="_password" id="password" class="form-control border-secondary" autocomplete="current-password" placeholder="Password" autocomplete="off">
						<label for="password">Password
							<span class="text-danger">*</span>
						</label>
					</div>
					<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
				</div>
				<div class="text-center">
					<button class="btn btn-primary px-5 rounded-pill fw-medium dark-blue border-0" type="submit">
						Login
					</button>
				</div>
			</div>
		</form>
	</body>
</html>
