{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}
	<form method="post" class="d-flex justify-content-center">
		<div class="login-wrapper p-4 border my-5 rounded-4 w-50 d-flex flex-column gap-3 shadow">
    <h3 class="text-center">Login</h3>
			{% if error %}
				<div class="alert alert-danger fw-bold my-0">{{ error.messageKey }}</div>
			{% endif %}
			<div>
				<div class="form-floating mb-3">
					<input type="email" value="{{ last_username }}" placeholder="name@example.com" name="_username" id="username" class="form-control border-white" autocomplete="email" autofocus>
					<label for="username">Email <span class="text-danger">*</span></label>
				</div>
				<div class="form-floating">
					<input type="password" name="_password" id="password" class="form-control border-white" autocomplete="current-password" placeholder="Password" autocomplete="off">
					<label for="password">Password <span class="text-danger">*</span></label>
				</div>
				<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
			</div>
			<div class="text-center">
				<button class="btn btn btn-primary px-5 rounded-pill" type="submit">
					Login
				</button>
			</div>
		</div>
	</form>
{% endblock %}
