{# templates/patient/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Patient/Add
{% endblock %}

{% block body %}
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card rounded-4 overflow-hidden">
					<div class="card-header" style="background-color: #1c274c">
						<h4 class="mb-0 text-center text-white">Add Patient</h4>
					</div>
					<div class="card-body">
						{{ form_start(form) }}
						<div class="form-floating mb-3">
							{{ form_widget(form.firstName) }}
							<label for="">
								First Name
								<span class="text-danger fw-bold">
									*
									{% if form.firstName.vars.errors|length > 0 %}
										{{ form.firstName.vars.errors[0].message }}
									{% endif %}
								</span>
							</label>
						</div>
						<div class="form-floating mb-3">
							{{ form_widget(form.lastName) }}
							<label for="">
								Last Name
								<span class="text-danger fw-bold">
									*
									{% if form.lastName.vars.errors|length > 0 %}
										{{ form.lastName.vars.errors[0].message }}
									{% endif %}
								</span>
							</label>
						</div>
						<div class="form-floating mb-3">
							{{ form_widget(form.cin) }}
							<label for="">
								CIN
								<span class="text-danger fw-bold">
									*
									{% if form.cin.vars.errors|length > 0 %}
										{{ form.cin.vars.errors[0].message }}
									{% endif %}
								</span>
							</label>
						</div>
						<div class="form-floating mb-3">
							{{ form_widget(form.phone) }}
							<label for="">
								Phone
								<span class="text-danger fw-bold">
									*
									{% if form.phone.vars.errors|length > 0 %}
										{{ form.phone.vars.errors[0].message }}
									{% endif %}
								</span>
							</label>
						</div>
						<div class="text-center">
							<button type="submit" class="btn btn-success border-0 rounded-pill px-5 fw-medium dark-blue">
								Add
							</button>
						</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
