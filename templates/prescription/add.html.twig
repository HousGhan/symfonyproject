{% extends 'base.html.twig' %}

{% block title %}Prescription/Add
{% endblock %}

{% block body %}
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card rounded-4 overflow-hidden">
					<div class="card-header" style="background-color: #1c274c">
						<h4 class="mb-0 text-center text-white">Generate Prescription for
							<span class="text-success">"{{patient.firstName ~ " " ~ patient.lastName}}"</span>
						</h4>
					</div>
					<div class="card-body">
						<div class="fw-medium">Note: Follow this format:
							<div class="text-success">medication1 dose duration</div>
							<div class="text-success">medication2 dose duration</div>
						</div>
						{{ form_start(form) }}
						<div class="form-floating mb-3">
							{{ form_widget(form.medicaments) }}
							<label for="">
								Medicaments
								<span class="text-danger fw-bold">
									*
									{% if form.medicaments.vars.errors|length > 0 %}
										{{ form.medicaments.vars.errors[0].message }}
									{% endif %}
								</span>
							</label>
						</div>
						<div class="text-center">
							<button type="submit" class="btn btn-success border-0 rounded-pill px-5 fw-medium dark-blue">
								Add
							</button>
						</div>
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
